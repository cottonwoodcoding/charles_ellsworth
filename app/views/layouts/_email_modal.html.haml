#email_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-body
        %h2 Create One Time Use Catalog Download Link
        %form{method: 'post', action: '/admin/download_link'}
          = hidden_field_tag :authenticity_token, form_authenticity_token
          .form-group
            %input.form-control{name: 'email', placeholder: "Enter email", type: 'email'}
          .form-group.text-center
            %button.btn.btn-default{type: 'button', 'data-dismiss' => 'modal'} Close
            %button.btn.btn-inverse{type: 'submit'} Submit
