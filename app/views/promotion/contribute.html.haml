- if admin_signed_in?
  - admin_class = 'pointer contribution_edit'
#contribution_description.text-center{class: admin_class}
  = @contribution_text
  - if admin_class
    %span.glyphicon.glyphicon-edit
%hr
#donation_container.text-center
  %h2.underline Contribute Here
  %form#contribution_form.hide{method: '/send_contribution', type: 'post'}
    %input{type: 'hidden', name: 'contribution_amount'}
  %span.money-label.donation_label.label.label-success.pointer{value: '10'} $10
  %span.money-label.donation_label.label.label-success.pointer{value: '25'} $25
  %span.money-label.donation_label.label.label-success.pointer{value: '50'} $50
  %span.money-label.label.label-success.pointer.other_donation Other
%hr
%h2.underline.text-center Albums
- @albums['ALBUMS'].each_with_index do |a, i|
  - i += 1
  %div.col-sm-4.text-center
    %h4.lato.album-title
      = a['NAME']
    %span
      %img.art-thumb{src: album_art_image_path(a['ART'])}
    %div
      - a['TRACKS'].each do |t|
        %div
          = t['NAME']
  - if i % 3 == 0
    .clearfix
